{
  "apps": [
    {
      "name": "superpynode",
      "script": "index.js",
      "instances": 1,
      "autorestart": true,
      "watch": true,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development",
        "PORT": 4000,
        "INFURA_API_KEY": "your-infura-project-id", 
        "PRIVATE_KEY": "your-private-key"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 4000,
        "INFURA_API_KEY": "your-infura-project-id", 
        "PRIVATE_KEY": "your-private-key"
      }
    }
  ]
}
